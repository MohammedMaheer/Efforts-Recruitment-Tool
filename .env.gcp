# =====================================================
# GCP DEPLOYMENT - Environment Variables
# =====================================================
# Copy this to .env and fill in your values
# For Cloud Run, set these via Secret Manager or env vars
# =====================================================

# Application
ENVIRONMENT=production
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database (SQLite for single-instance, PostgreSQL for multi-instance)
# For Cloud Run with persistent storage, use Cloud SQL:
# DATABASE_URL=postgresql://user:pass@/dbname?host=/cloudsql/project:region:instance
DATABASE_URL=./recruitment.db

# AI Services - OpenAI (Emergency Fallback)
OPENAI_API_KEY=

# Local LLM (Ollama) - Only if running Ollama on GCE alongside
# For Cloud Run, LLM is typically not available locally
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_PRIMARY_MODEL=qwen2.5:7b

# Microsoft Graph (Email OAuth2)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=
EMAIL_ADDRESS=hr@effortz.com
OAUTH_REDIRECT_URI=https://YOUR_BACKEND_URL/api/oauth2/callback

# CORS - Update with your frontend Cloud Run URL
CORS_ORIGINS=https://YOUR_FRONTEND_URL.run.app,http://localhost:3000

# Frontend API URL (for Vite build)
VITE_API_URL=https://YOUR_BACKEND_URL.run.app
VITE_ENV=production

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Google Calendar (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Performance
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL_SECONDS=300
AI_TIMEOUT=15
AI_ANALYSIS_TIMEOUT=180
