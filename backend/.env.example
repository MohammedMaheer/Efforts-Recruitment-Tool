# ===================================
# BACKEND ENVIRONMENT VARIABLES
# ===================================
# Copy this to .env and configure for your environment
# See docs/PRODUCTION_DEPLOYMENT.md for production setup

# ===================================
# REQUIRED SETTINGS
# ===================================

# Environment mode (development/production)
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# Database configuration
# Development: sqlite:///./ai_recruiter.db
# Production: postgresql://user:password@host:5432/dbname
DATABASE_URL=sqlite:///./ai_recruiter.db

# JWT configuration - CHANGE IN PRODUCTION!
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Frontend URLs (comma-separated)
# Development: http://localhost:3000,http://localhost:3001
# Production: https://your-frontend-domain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Backend Server
HOST=0.0.0.0
PORT=8000

# ===================================
# AI MODELS (Local - FREE!)
# ===================================
# Local AI models download automatically on first run
# No API key needed - runs entirely locally

# Sentence Transformer model for semantic matching
MODEL_NAME=sentence-transformers/all-mpnet-base-v2
USE_GPU=false

# AI Assistant Mode
# Set USE_OPENAI=true ONLY if you want enhanced AI (costs money)
USE_OPENAI=false

# ===================================
# OPTIONAL - OpenAI API (Enhanced AI)
# ===================================
# Leave empty to use free local AI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ===================================
# OPTIONAL - Microsoft OAuth2 (Email Integration)
# ===================================
# See docs/OAUTH2_SETUP.md for Azure App registration
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=
# Development: http://localhost:8000/api/oauth2/callback
# Production: https://api.your-domain.com/api/oauth2/callback
OAUTH_REDIRECT_URI=http://localhost:8000/api/oauth2/callback

# Auto sync settings
AUTO_SYNC_ENABLED=false
SYNC_INTERVAL_MINUTES=15
AUTO_TOKEN_REFRESH=true

# ===================================
# OPTIONAL - Twilio SMS Notifications
# ===================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ===================================
# OPTIONAL - Google Calendar Integration
# ===================================
GOOGLE_CALENDAR_CREDENTIALS_PATH=
GOOGLE_CALENDAR_TOKEN_PATH=

# ===================================
# OPTIONAL - Calendly Integration
# ===================================
CALENDLY_API_KEY=
CALENDLY_USER_URI=

# ===================================
# OPTIONAL - Redis Cache (Production)
# ===================================
REDIS_URL=
CACHE_TYPE=memory

# ===================================
# OPTIONAL - Legacy Email Settings (IMAP)
# ===================================
# Note: Prefer Microsoft OAuth2 over IMAP for better security
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
EMAIL_ADDRESS=
EMAIL_PASSWORD=
SCRAPER_INTERVAL_SECONDS=60

EMAIL_FOLDERS_TO_MONITOR=INBOX,Applications,Careers
AUTO_PARSE_ATTACHMENTS=true
NOTIFICATION_ON_NEW_CANDIDATES=true

# SMTP (for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ===================================
# FILE UPLOAD LIMITS
# ===================================
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.docx
